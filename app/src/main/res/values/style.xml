<resources>
    <style name="DetalleTitleTheme">
  		<item name="android:textColor">#000000</item>
  		<item name="android:background">#FFFFFF</item>
  		<item name="android:textSize">30sp</item>
    </style>
    
    <style name="MainTitleTextStyle">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="DetalleTitleTextStyle">
	</style>

    <style name="Theme.MainTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@android:color/transparent</item>

        <item name="actionModeBackground">@color/color_primary_dark</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="textAppearanceLargePopupMenu">@style/PopupTextStyleLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupTextStyleSmall</item>
    </style>

    <style name="PopupTextStyleLarge" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="PopupTextStyleSmall" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="PopupOverflow" >
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.DetailTheme" parent="Theme.MainTheme" >
    </style>
    <style name="DetalleTheme" parent="android:Theme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">142px</item>
    </style>
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>