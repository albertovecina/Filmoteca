<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.vsa.filmoteca.view.activity.CommentsActivity" >
    <LinearLayout
        android:id="@+id/layout_tweet_editor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/white">
            <ImageButton
                android:id="@+id/imagebutton_close_session"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/selector_close_session_drawable"
                android:background="@drawable/selector_widget_button_background" />
            <com.vsa.filmoteca.view.imageview.RoundedCornersImageView
                android:id="@+id/imageview_profile_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_toRightOf="@id/imagebutton_close_session" />
            <TextView
                android:id="@+id/textview_user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageview_profile_image"
                android:layout_toLeftOf="@+id/layout_tweet_send_and_char_count"
                android:ellipsize="end"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/textview_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_below="@id/textview_user_description"
                android:layout_toRightOf="@id/imageview_profile_image"
                android:layout_toLeftOf="@+id/layout_tweet_send_and_char_count"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@id/layout_tweet_send_and_char_count"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true" >
                <TextView
                    android:id="@+id/textview_char_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp" />
                <ImageButton
                    android:id="@+id/button_publish_tweet"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/selector_send_drawable"
                    android:background="@drawable/selector_widget_button_background" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <EditText
            android:id="@+id/edittext_twitter_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/hint_message"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent" />
    </LinearLayout>


    <com.vsa.filmoteca.view.component.TwitterRxLoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <ListView
        android:id="@+id/listview_tweets"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
